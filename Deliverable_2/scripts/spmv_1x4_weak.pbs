#!/bin/bash
#PBS -N SpMV_4
#PBS -o ../results/spmv_4_weak.txt
#PBS -e ../results/spmv_4_weak.err
#PBS -q short_cpuQ
#PBS -l walltime=06:00:00
#PBS -l select=1:ncpus=4:mpiprocs=4:mem=24gb

module load gcc91
module load mpich-3.2.1--gcc-9.1.0

cd $PBS_O_WORKDIR

mkdir -p ../results

PROC=4

SOURCE="../source/mpi_blocking.cpp"
EXECUTABLE="spmv-1x4-weak.out"

mpic++ -std=c++11 -O3 -g "$SOURCE" -o "$EXECUTABLE"

mpiexec -n "$PROC" ./"$EXECUTABLE" ../Matrices/weak_scaling_"$PROC"P.mtx

rm ./"$EXECUTABLE"